<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zq.myinterfacepictureupload.MainActivity"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="266dp"
        android:orientation="vertical"
        android:background="@mipmap/my_reister_back"
        android:gravity="center"
        >
        <com.zq.myinterfacepictureupload.ZQRoundOvalImageView
            android:id="@+id/my_sign_sub_img"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:scaleType="fitXY"
            android:src="@mipmap/zhangwo_hometop1"
            />
        <TextView
            android:id="@+id/my_sign_sub_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="头像设置"
            android:textSize="15sp"
            android:layout_marginTop="5dp"
            android:textColor="@color/colorAccent"
            />
    </LinearLayout>
</LinearLayout>
